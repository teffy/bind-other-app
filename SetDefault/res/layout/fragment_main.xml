<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teffy.setdefault.MainActivity$PlaceholderFragment" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/bt_set_call"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_margin="10dip"
        android:layout_height="wrap_content"
        android:text="Call设置为默认" />
    <Button
        android:id="@+id/bt_set_contacts"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_margin="10dip"
        android:layout_height="wrap_content"
        android:text="Contacts设置为默认" />
    <Button
        android:id="@+id/bt_set_mms"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_margin="10dip"
        android:layout_height="wrap_content"
        android:text="Mms设置为默认" />

    <Switch
        android:id="@+id/sw_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="Call绑定" />
    <Switch
        android:id="@+id/sw_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="Contacts绑定" />
    <Switch
        android:id="@+id/sw_mms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="Mms绑定" />

</LinearLayout>
